<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorRecyclerViewBackground"
            android:orientation="vertical">

            <include layout="@layout/order_details_layout" />

            <include layout="@layout/shipping_details_layout" />

            <include layout="@layout/cart_total_amount_layout" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>